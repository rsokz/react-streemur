{
  "plugins": [
    {
      "name": "typescript-tslint-plugin",
      "exclude": ["node_modules/*"]
    }
  ],
  "sourceMap": true,
  "outDir": "dist",
  "baseUrl": ".",
  "paths": {
    "client/*": ["*"],
    "src/*": ["src/*"],
    "public/*": ["public/*"],
    "app": ["src/app"],
    "app/*": ["src/app/*"],
    "auth": ["src/auth"],
    "auth/*": ["src/auth/*"],
    "header": ["src/header"],
    "header/*": ["src/header/*"],
    "services": ["src/services"],
    "services/*": ["src/services/*"],
    "store": ["src/store"],
    "store/*": ["src/store/*"],
    "streams": ["src/streams"],
    "streams/*": ["src/streams/*"]
  }
}
